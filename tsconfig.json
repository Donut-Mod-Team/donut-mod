{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2019",
        "noEmitOnError": false,
        "noImplicitAny": true,
        "strict": true,
        "charset": "utf8",
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./build/",
        "lib": ["es2019", "dom"],
        "baseUrl": ".",
        "paths": {
            "spotfire-api": ["./spotfire/spotfire-api-1-2"],
        },
        "typeRoots": ["./spotfire", "./node_modules/@types"]
    },
    "include": ["./src/**/*.js", "./spotfire/*.d.ts", "./src/**/*.d.ts", "./node_modules/**/*.d.ts"]
}
