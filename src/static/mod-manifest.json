{
    "apiVersion": "1.2",
    "version": "1.0",
    "name": "Donut Chart",
    "id": "donut-modnp",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "y-axis-mode",
            "type": "string",
            "defaultValue": "numeric"
        },
        {
            "name": "split-bars",
            "type": "boolean",
            "defaultValue": true
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Sector size by:",
                "mode": "continuous",
                "placement": "none"
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}
